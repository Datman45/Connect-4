@page
@model WebApp.Pages.Options

<div class="options-form">
    <div class="title">Options</div>
    <form method="post">
        
        <div class="board-size">
            <div class="form-group">
                <label asp-for="BoardHeight" class="control-label">Board Height</label>
                <input asp-for="BoardHeight" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="BoardWidth" class="control-label">Board Width</label>
                <input asp-for="BoardWidth" class="form-control"/>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="CheckersWinningSize" class="control-label">Winning size</label>
            <input asp-for="CheckersWinningSize" class="form-control"/>
        </div>

        <div class="form-check">
            <input asp-for="BoardShape"
                   class="form-check-input"
                   type="radio"
                   id="rectangle"
                   value="rectangle"/>
            <label class="form-check-label" for="rectangle">Rectangle</label>
        </div>

        <div class="form-check">
            <input asp-for="BoardShape"
                   class="form-check-input"
                   type="radio"
                   id="cylinder"
                   value="cylinder"/>
            <label class="form-check-label" for="cylinder">Cylinder</label>
        </div>

        <div class="actions">
            <div class="form-group">
                <a class="return-button" a asp-page="./Index">Return</a>
                <button type="submit" class="save-button">Save</button>
            </div>
        </div>
    </form>
</div>
